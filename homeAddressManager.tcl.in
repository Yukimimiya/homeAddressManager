    set serial [getCurrentSerial $zone]
    while {![eof $templ]} {
        set line [gets $templ]
        set line [regsub -all -line -- {%%SEREAL%%} $line $serial]
        if {[string equal {%%FIXIPV6PTRRECORDES%%} $line]} {
            while {![eof $csv]} {
                set data [gets $csv]
                if {[regexp {^#} $data]} {
