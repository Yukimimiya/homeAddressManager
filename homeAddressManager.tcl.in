                if {[string equal {eui64} $ipv6addr]} {
                    set ipv6addr "$ipv6netaddr[genEUI64 $macaddr]"
                }
                puts "DEBUG: host = $host, ipv6addr = $ipv6addr"
                if {[string equal {} $host] || [string equal {} $ipv6addr]} {
                    continue
