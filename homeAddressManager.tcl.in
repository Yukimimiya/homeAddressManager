    }
    if {[catch [list close $csv] err]} {
        puts stderr $err
        exit 1
    }
    if {[catch [list close $templ] err]} {
        puts stderr $templ
        exit 1
    }
}

proc getIPv6PTR {addr} {
    set buf {}
    foreach i [lrange [split $addr {:}] 4 end] {
        if {[string equal {} $i]} {
            set buf [format {%s0000} $buf]
        } else {
            set buf "$buf[format {%04x} 0x$i]"
        }
    }
    set buf [join [lreverse [split $buf {}]] {.}]
    return $buf
}

